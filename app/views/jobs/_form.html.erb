<div class="form">
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, id: :job_title %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description, id: :job_description %>
    </div>

    <div class="field">
      <%= form.label :origin %>
      <%= form.text_field :origin, id: :job_origin %>
    </div>

    <div class="field">
      <%= form.label :destination %>
      <%= form.text_field :destination, id: :job_destination %>
    </div>

    <div class="field">
      <%= form.label :cost %>
      <%= form.number_field :cost, id: :job_cost %>
    </div>

    <div class="field">
      <%= form.label :containers %>
      <%= form.number_field :containers, id: :job_containers %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
</div>