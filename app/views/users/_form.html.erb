<div class="form">
    <div class="field">
      <%= form.label :photo %>
      <%= form.file_field :photo, id: :user_photo %>
    </div>

    <div class="field">
      <%= form.label :fname %>
      <%= form.text_field :first_name, id: :user_fname %>
    </div>

    <div class="field">
      <%= form.label :lname %>
      <%= form.text_field :last_name, id: :user_lname %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :username, id: :user_email %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.text_field :password, id: :user_password %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
</div>